<center>
	<%= form_with model: @social do |form| %>
		<div>
			<%= form.label :username %><br>
			<%= form.text_field :username %>
			<% @social.errors.full_messages_for(:username).each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>

		<div>
			<%= form.label :password %><br>
			<%= form.text_field :password %><br>
			<% @social.errors.full_messages_for(:password).each do |message| %>
				<div><%= message %></div>
			<% end %><br>
		</div>

		<div class="form-group">
		<%= form.label :media_type, "Social media Platform" %><br>
		<%= form.select :media_type, options_for_select(["Instagram","LinkedIn","Twitter"]), { prompt: "Select Platform" }%><br>
			<% @social.errors.full_messages_for(:media_type).each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>

		<div>
			<%= form.hidden_field :user_id, value: current_user.id %>
		</div>

		<div>
			<br>
			<%= form.submit "Create Profile" %>
		</div>
	<% end %>

</center>